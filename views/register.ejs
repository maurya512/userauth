<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            <!-- imported partials message syntax to display error messages on the registration screen -->
            <%- include ("./partials/messages"); %>
            <!-- Register form with post request -->
            <form action="/users/register" method="POST">
                <!-- form validation for username -->
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                        value="<% typeof name != 'undefined' ? name: '' %>" />
                </div>
                <!-- form validation for email id -->
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                        value="<% typeof email != 'undefined' ? email : '' %> " />
                </div>
                <!-- form validation for password -->
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password" value="<% typeof password != 'undefined' ? password: ''; %>" />
                </div>
                <!-- form validation to confirm the password -->
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password" value="<% typeof password2 != 'undefined' ? password2: ''; %>" />
                </div>
                <!-- submit button -->
                <button type="submit" class="btn btn-primary btn-block mt-2">
                    Register
                </button>
            </form>
            <!-- if user already has an account re route them to the login page -->
            <p class="lead mt-4">Have an Account? <a href="/users/login">Login</a></p>
            <!-- home page re route -->
            <p class="lead mt-2"><a href="/">Home</a></p>
        </div>
    </div>
</div>
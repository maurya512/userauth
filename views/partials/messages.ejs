<!-- check to see if errors exits -->
<% if(typeof errors!='undefined' ) {%>
    <!-- if errors are found, loop through errors array and display each error message on the screen -->
    <% errors.forEach(function(error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <!-- displays the pertaining error message -->
            <%= error.message %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
        </div>
        <% }); %>
            <% } %>

                <!-- success flash message for login redirect -->
                <% if(success_message !='' ) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <!-- displays the pertaining error message -->
                        <%= success_message %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                    <% } %>

                        <!-- error flash message for login redirect -->
                        <% if(error_message !='' ) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <!-- displays the pertaining error message -->
                                <%= error_message %>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                            </div>
                            <% } %>

                                <!-- error flash for wrong user or password on the login page  -->
                                <% if(error !='' ) { %>
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <!-- displays the pertaining error message -->
                                        <%= error %>
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                    </div>
                                    <% } %>